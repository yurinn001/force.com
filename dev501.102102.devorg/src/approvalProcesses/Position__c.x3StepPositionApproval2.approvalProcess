    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_2__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Position__c.Pay_Grade__c</field>
                <operation>contains</operation>
                <value>400, 300</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>VP of Hiring Manager for Sr-Level Positions</label>
        <name>VPofHiringManagerforSrLevelPositions</name>
        <rejectBehavior>
            <type>RejectRequest</type>
